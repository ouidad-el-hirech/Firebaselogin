<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250px"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="5dp"
    android:background="@drawable/layout_bg"
    >

    <RelativeLayout
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/image"
            android:layout_width="118dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="6dp" />


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/image"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="title"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/location_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@+id/image"
            app:srcCompat="@drawable/location" />

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/location_ic"
            android:text="city"
            android:textColor="#403B3B"></TextView>

        <ImageView
            android:id="@+id/money_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/location_ic"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/image"
            app:srcCompat="@drawable/money" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/city"
            android:layout_marginStart="0dp"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/money_ic"
            android:text="price"
            android:textColor="#3E0947"></TextView>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/city"
            android:layout_marginStart="80dp"
            android:layout_marginTop="18dp"
            android:layout_toEndOf="@+id/price"
            android:fontFamily="sans-serif-thin"
            android:text="Date"
            android:textColor="#393639"
            android:textSize="10dp"></TextView>

    </RelativeLayout>
</androidx.cardview.widget.CardView>